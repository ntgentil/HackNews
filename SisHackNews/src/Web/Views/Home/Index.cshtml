@model IEnumerable<Application.ViewModel.NoticiaViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<h2>Últimas Notícias</h2>

@foreach (var item in Model)
{
    <hr />
    <div class="row">
        <div class="col-lg-12 col-md-12 mx-auto">
            <div class="post-preview">
                <a asp-action="Details" asp-route-id="@item.NoticiaId">
                    <h2 class="post-title">
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </h2>
                </a>
                <h4 class="post-subtitle">
                    @Html.DisplayFor(modelItem => item.SubTitulo)
                </h4>

                <p class="post-meta">
                    Postado por
                    <a href="#">@Html.DisplayFor(modelItem => item.Autor)</a><br />
                    Publicado em @Html.DisplayFor(modelItem => item.DataPublicacao)
                </p>
            </div>

        </div>
    </div>

}
    
